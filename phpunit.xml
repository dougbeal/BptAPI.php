<?xml version="1.0" encoding="UTF-8"?>
<phpunit 
    bootstrap="./vendor/autoload.php"
    colors="true"
    stopOnFailure="false"
    stopOnError="false"
    verbose="true"
>
    <testsuites>
        <testsuite name="all">
            <directory>tests/</directory>
        </testsuite>
        <testsuite name="get">
            <directory>tests/Get/</directory>
        </testsuite>
        <testsuite name="create">
            <directory>tests/Create/</directory>
        </testsuite>
        <testsuite name="error">
            <directory>tests/Errors/</directory>
        </testsuite>
        <testsuite name="submit">
            <directory>tests/Order/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
</phpunit>
